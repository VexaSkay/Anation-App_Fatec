<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_initial"
    tools:context=".RegisterCNPJActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_title"
        android:text="ANATION"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_email"
        android:layout_below="@id/register_title"
        android:background="@drawable/rounded_edittext"
        android:hint="Email da empresa"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_user"
        android:layout_below="@id/register_email"
        android:background="@drawable/rounded_edittext"
        android:hint="Nome da empresa"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_password"
        android:layout_below="@id/cnpj_box"
        android:background="@drawable/rounded_edittext"
        android:hint="Sua Senha"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        />
    <!--    <EditText-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:id="@+id/register_re_password"-->
    <!--        android:layout_below="@id/register_password"-->
    <!--        android:background="@drawable/rounded_edittext"-->
    <!--        android:hint="Sua Senha Novamente"-->
    <!--        android:textColorHint="@color/white"-->
    <!--        android:textColor="@color/white"-->
    <!--        android:layout_marginStart="20dp"-->
    <!--        android:layout_marginTop="2dp"-->
    <!--        android:layout_marginEnd="20dp"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:padding="20dp"-->
    <!--        android:drawableLeft="@drawable/icon_password"-->
    <!--        android:drawablePadding="20dp"-->
    <!--        android:inputType="textPassword"-->
    <!--        />-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cnpj_box"
        android:layout_below="@id/register_user"
        android:background="@drawable/rounded_edittext"
        android:hint="CNPJ"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/icon_cnpj"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/main_red"
        android:text="Registrar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_btn"
        android:id="@+id/cadastro_empresa"
        android:text="Voltar para tela de cadastro."
        android:textColor="@color/main_red"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/redes_sociais_icones"
        android:id="@+id/icones_login"
        android:text="Registre sua empresa com:"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/redes_sociais_icones"
        android:gravity="center">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/google"
            android:layout_margin="20dp"
            />
    </LinearLayout>

</RelativeLayout>
